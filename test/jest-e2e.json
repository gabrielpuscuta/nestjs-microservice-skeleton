{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@db/(.*)$": "<rootDir>/../src/database/$1",
    "^@system/(.*)$": "<rootDir>/../src/system/$1",
    "^@app/(.*)$": "<rootDir>/../src/app/$1"
  }
}
